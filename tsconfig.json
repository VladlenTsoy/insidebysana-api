{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2019",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strictPropertyInitialization": false,
    "lib": [
      "es2019"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "src/*",
        "src/app/*",
        "src/app/http/*"
      ],
      "@events": [
        "src/app/events/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/resources/locales/*.json"
  ],
  "typeRoots": [
    "src/types",
    "./node_modules/@types"
  ]
}
